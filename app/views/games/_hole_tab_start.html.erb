<% @holes_filtered.each do |f|%>
<%  if f.hole_number == @active_hole %>
    <b><%= f.hole_number %></b>
    <% else %>
    <%= f.hole_number %> 
    <% end %>
    <%end%>
    <%=active_hole%> 
    <% if active_hole != @start_hole%>
        <%= link_to 'Previous', preva_path(active_hole, game_id), :remote => true %>
<% end %>
<% if active_hole != @end_hole%>
        <%= link_to 'Next', nexta_path(active_hole, game_id), :remote => true %>
<% end %>
    
