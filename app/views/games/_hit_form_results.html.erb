
      
      <div class="right_coll">
        <%=form_for( game, :url => ('/hit_update/' + game.id.to_s + '/'), :html => {:id => "hit_form"}, :remote => true) do |game|%>
        <input type="hidden" name="next_hit" id="nexthit" value=0>
        <input type="hidden" name="form_id" id="formid" value="results">
        <input type="hidden" name="active_hit" id="act_hit" value=1>
        <input type="hidden" name="next_hole" id="nexthole" value=<%=active_hole%>>
        <div class="headings">
          <p>Nūja</p>
          <div class="heading1"><p>Cik tālu (m)</p></div>
          <div class="heading2"><p>Kur piezemējās</p></div>
        </div>
        <div class="clear"></div>
        <div class="dropdowns_wrap">
          <% hits.each do |hit|%>
          <%=game.fields_for :hits, hit do |f|%>
          <p><%=hit.hit_number%>.</p>
          <div class="element" style="height:45px">                    
                <%= f.collection_select :stick_id, current_user.sticks, :id, :stick_type, {:prompt => "Izvēlies.."},{:class => "dropdown3"} %>
              </div>
          
          <div class="element" >
            <%= f.text_field :hit_distance%> <%#= if current_user.measurement == 'foots' then 'ft' else 'm' end%>
          </div>
          
          <div class="element">
            <form action="#" method="post">
              <%= f.select( :land_place, PLANNED_LAND_PLACES,{ :prompt => "Select"}, {:class => "dropdown3"}) %>
              </select>
            </form>
          </div>
        
        <div class="clear"></div>
        <%= f.hidden_field :hole_number, :value => active_hole %>
        <%= f.hidden_field :hit_number, :value => active_hit %>
         <% end %>
          
        <% end %>
       </div>
              
           
        <% if active_hole != end_hole%>
        <div class="button_wrap">
         <a href="#" rel="<%=active_hole.to_i + 1%>" class="hole_switch green_button" style="padding:5px; line-height:50px">Tālāk</a>
        </div>
         <%end%>
        <div class="button_wrap">
              <a href="#" rel="save" class="gray_button saveswitch" style="padding:5px; line-height:50px">Saglabāt</a>
              </div>
       
<% end %>
</div>
     