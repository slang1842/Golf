<h1>Listing hints</h1>

<table>
  <tr>
    <th>User</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hints.each do |hint| %>
  <tr>
    <td><%= hint.user %></td>
    <td><%= hint.text %></td>
    <td><%= link_to 'Show', hint %></td>
    <td><%= link_to 'Edit', edit_hint_path(hint) %></td>
    <td><%= link_to 'Destroy', hint, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

