<%= render :partial => 'share/header_menu', :locals => {:header_menu_active_class => "my_club"} %>

<div class="background_fix2" style="overflow:hidden">
  <div class="profile_info_input" style="padding-bottom:1px; float:left; width:400px">

    <h1>Edit golf club</h1>
    <div class="left_wrap profile_info_input" style="margin-top:0px; float:none ">
      <%= form_for(@golf_club, :url => golf_club_path)  do |f| %>
        <% if @golf_club.errors.any? %>


          <div class="error">
            <h2><%= pluralize(@golf_club.errors.count, "error") %> prohibited this golf_club from being saved:</h2>
            <ul>
              <% @golf_club.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          <% end %>
        </div>

        <% if flash.count > 0 %>
          <div class="info" style="display:block;">
            <% flash.each do |key, msg| %>
              <%= content_tag :div, msg, :class => [key, " message"], :id => "notice_ #{key}" %>
              <%= content_tag :script, :type => "text/javascript" do -%>
                setTimeout("new Effect.Fade('notice_<%= key %>');", 15000);
              <% end %>
            <% end %>
          </div>
        <% end %>

        <div class="single_element">
          <div class="text">
            <p><%= f.label :name %></p>
          </div>
          <div class="input">
            <%= f.text_field :name %>
          </div>
        </div>


        <div class="single_element" style="margin-top:10px">
          <div class="text">
            <p><%= f.label t "form.country" %></p>
          </div>
          <div class="input">
            <%= f.collection_select :country_id, Country.all, :id, :name,{}, {:class=> "dropdown3"}%>
          </div>
        </div>


        <div class="single_element">
          <div class="text">
            <p><%= f.label :region %></p>
          </div>
          <div class="input">
            <%= f.text_field :region %>
          </div>
        </div>



        <div class="single_element">
          <div class="text">
            <p><%= f.label :city %></p>
          </div>
          <div class="input">
            <%= f.text_field :city %>
          </div>
        </div>



        <div class="single_element">
          <div class="text">
            <p><%= f.label :web_page %></p>
          </div>
          <div class="input">
            <%= f.text_field :web_page %>
          </div>
        </div>


        <div class="green_button_save_field">
          <%= f.submit %>
        </div>
      </div>

    <% end %>




    <%= render :partial => 'fields/list', :class => "green_button", :locals => {:golf_club => @golf_club, :fields => @golf_club.fields } %>




  </div>
</div>
<div class="clear"></div>





















