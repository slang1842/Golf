                    <% end %>
                    <br />
                    AVG:
                    <% unless @stats == nil || @stats.avg_distance == nil %>
                      <%="#{@stats.avg_distance}m"%>
                    <% else %>
                      N/A
                    <% end %>
                  </p>
                </div>

              </div>
            <%end%>
					</div>
