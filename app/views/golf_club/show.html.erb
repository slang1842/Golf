<%= render :partial => 'share/header_menu', :locals => {:header_menu_active_class => "my_club"} %>
<script type="text/javascript">

  function change_coach(id){
    var form = '.edit_user_' + id
    var c_checkbox = '#c_checkbox_' + id
    var a_checkbox = '#a_checkbox_' + id
    var c_value = '#c_value_' + id
    var a_value = '#a_value_' + id

    if ($(c_checkbox).attr("checked") == true) { $(c_value).val(id); }
    else { $(c_value).val("");}

    if ($(a_checkbox).attr("checked") == true){$(a_value).val(1); }
    else {$(a_value).val(0);}
    
    $(form).submit();
  }
</script>

<% if current_user.golf_club.accepted == "yes" %>
  <div class="club_wrap">
    <div class="club_info_wrap">
      <h1><%=@club.name%></h1>
			<div class="club_info">
      	<p><span class="gray"><%=@club.city%>, <%=@club.region%></span></p>
      	<p><span class="gray"><%=@club.web_page%></span></p>
			</div>

    </div>
				<div class="club_links">
      	<a href="/club/edit" class="green_button">Edit club info</a>  <a href="<%=new_golf_club_field_path%>" class="green_button">Add field</a> <a href="/club/edit_fields" class="green_button">Edit fields</a>  <a href="/announcements/new" data-remote="true" class="green_button"> Add article </a>  <a href="/side_ad" data-remote="true" class="green_button"> Manage ads </a>
