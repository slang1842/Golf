			<div class="clear"></div>

		<div class="announcement_form_wrap"></div>
		<div class="side_ad_wrap" style="margin:10px"></div>
    <div class="club_players_wrap">
      
      

      <% @users.each do |user| %>
        
          <div class="single_player_wrap">
            <div class="profile_info">
