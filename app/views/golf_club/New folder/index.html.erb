

<%= render :partial => 'share/header_menu' %>

<% flash.each do |key, msg| %>
    <%= content_tag :div, msg, :class => [key, " message"], :id => "notice_ #{key}" %>
    <%= content_tag :script, :type => "text/javascript" do -%>
        setTimeout("new Effect.Fade('notice_<%= key %>');", 15000);
    <% end %>
<% end %>


<% if current_user.admin %>

    <% if current_user.golf_club && current_user.golf_club.accepted == "no" %>
    
    Administrator did not accepted your club
    
    <% elsif current_user.golf_club && current_user.golf_club.accepted == "yes" %>
    
    <%= render :partial => 'golf_clubs/club_menu' %><br /><br /><br />

    <% else %>
    
    Club has not been accepted yet.
    <% end %>
<% end %>

