<%= render :partial => 'share/header_menu', :locals => {:header_menu_active_class => "statistic"} %>

<!-- ================================= top mini stats ============================ -->
<%= render :partial => 'statistic/mini_statistic_top' %>


<div class="single_stats_wrap">
<div class="statistic_ads_wrap">
    <% if current_user && current_user.golf_club %>
      <% if current_user.golf_club.is_v_banner_disabled == false %>
        <img src="<%=current_user.golf_club.image_v.url%>" width="160px" height="469px" alt=""/>
      <%end%>
    <%else%>
      <img src="/images/ad_blank.png" width="160px" height="469px" alt=""/>
    <%end%>
  </div>	
	<div class="table_wrap">
			<div class="line">
        <div class="row" style="width:90px">
          <p>Place</p>
        </div>
				 <div class="row" style="width:90px">
          <p>HCP</p>
        </div>
        <div class="row" style="width:120px">
          <p>Name</p>
        </div>
        <div class="row" style="width:90px">
          <p>Total</p>
        </div>
        <div class="row" style="width:90px">
          <p>Putts</p>
        </div>
				<div class="row" style="width:90px">
          <p>Putts average</p>
        </div>        
			</div>
        <div class="clear"></div>
     <% i = 1%>
      <% @statistics.each do |stat|%>
      <% stat_user = stat.user%>
			<% if stat_user == @user_params%>
        <% style = "background-color:yellow" %>
			<% else %>
				<% style = "" %>				
			<% end %>
					<div class="line">
					<div class="row1" style="width:90px;<%=style%>">
            <p><%= i%>.</p>
          </div>
					<div class="row1" style="width:90px;<%=style%>">
            <p><%= stat_user.hcp%></p>
          </div>
          <div class="row1" style="width:120px;<%=style%>">
            <p><%= stat_user.first_name%> <%=stat_user.last_name%></p>
          </div>
          
          <div class="row1" style="width:90px;<%=style%>">
            <p><%= stat.total_stroke_count %></p>
          </div>
						
          <div class="row1" style="width:90px;<%=style%>">
            <p><%= stat.total_putt_count %></p>
          </div>
					
          <div class="row1" style="width:90px;<%=style%>">
            <p><%= stat.avg_putts %></p>
          </div>
        </div>
       <% i += 1%>
       <%end%>
	</div>
</div>
