
<%= form_for :announcement, @announcement, :url => "/admin/announcements", :html => { :multipart => true} do |a| %>

		
		<label>Heading:</label>
		<%= a.text_field :header, :class => "announcement_heading_field"%>
		<span class="counter heading_counter chars_left_header"></span>
		<div class="clear"></div>
		<label>Article:</label>
		<%= a.text_area :body, {:rows => 2, :cols => 20, :class => "announcement_body_field"}%>
		<span class="counter2 body_counter chars_left_body"></span>
		<div class="clear"></div>
		<label>Image:</label>
		<%= a.file_field :image %>
		<div class="clear"></div>
		<%= a.submit %>
<% end %>
		

