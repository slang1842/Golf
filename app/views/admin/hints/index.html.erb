    <div class="item"><%= c_admin.first_name %></div>
    <div class="item"><%= c_admin.last_name %></div>
    <div class="item"><a href="#" onclick="admin_show_c_hints(<%= c_admin.id %>, this)">Hints</a></div>
  </div>






