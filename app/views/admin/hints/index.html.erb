<h1>Listing Hints</h1>
<br/>

<script type="" >
  function admin_show_c_hints(id, link) {

  if ($("#" + id).css("display") == 'block' ) {
  $("#" + id).slideUp("fast");
  } else {
  $("#" + id).slideDown("slow");
  }
  }
</script>

<div class="admin_list_admins">
  <div class="item">Name</div>
  <div class="item">Name</div>
  <div class="item">To Do</div>
</div>

