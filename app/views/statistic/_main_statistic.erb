    <!-- ---------------------------- teebox ---------------------------- -->
    <div class="name">
      <p>Teebox</p>
    </div>
    <!-- ---------------------------- nujas ---------------------------- -->
    <% @user_sticks.each do |c_stick|%>
      <% @c_s_stick = @statistic.find_by_stick_id(c_stick.stick.id) %>
      <% conditions_user = {:user_id => @user_params.coach, :stick_id => c_stick.stick.id} %>
      <% conditions_admin = {:user_id => current_user.id, :stick_id => c_stick.stick.id} %>
      <% @c_hint_admin = Hint.find(:first, :conditions => conditions_admin) || Hint.new(conditions_admin) %>
      <% @c_hint_user = Hint.find(:first, :conditions => conditions_user) || Hint.new(conditions_user) %>
      <div class="progress_block">
        <!-- ============== hint ============== -->
        <div class="tip_bubble_wrap" id="teebox_<%=  c_stick.stick.id %>" style="display: none;">
          <div class="triangle"></div>
          <div class="frame">
            <% if @is_admin_and_coach || @is_admin %>
              <% if @user_params.id != current_user.id %>
                <p><%= "Give hint to (#{@current_club_trainer.first_name} #{@current_club_trainer.last_name}) for this situation." %> </p>
              <%  else %>
                <p><%= "Give hint for this situation." %> </p>
              <% end %>
              <div class="tip">
                <% puts "============================" %>
                <% puts @c_hint_admin.place_teebox_hint %>
                <%= form_for @c_hint_admin, :html => { :onsubmit=> ""}, :url => update_hints_statistic_path do |f|  %>
                  <%= f.text_area :place_teebox_hint, :class => "textarea" %>
                  <%= f.hidden_field :stick_id %>
                  <%= f.submit :class => "button_save" %>
                <% end %>
              </div>
            <% else %>
              <p><%= "Coach #{@user_params.first_name} #{@user_params.last_name} hint for this situation."  %> </p>
              <div class="tip">
                <p><%= @c_hint_user.place_teebox_hint %></p>
              </div>
            <% end %>
          </div>
        </div>
        <!-- ============== hint ============== -->
        <%  unless @c_s_stick.place_teebox == nil %>
          <!-- ============== show progress ============== -->
          <div class="progress_bar">
            <div class="progress_active <%= @c_s_stick.place_teebox.to_i < MAIN_STATISTIC_BAD_PROC ? "bad" : "normal" %>" style="width:<%= "#{@c_s_stick.place_teebox.to_i}%"%>">
              <div class="percentage">
                <p><%= "#{@c_s_stick.place_teebox}%"%></p>
              </div>
            </div>
          </div>
          <!-- ============== show progress ============== -->
        <% else %>
          <div class="no_value"><p><%= MAIN_STATISTIC_BAD_SIMBOL %></p></div>
        <% end %>
        <!-- ============== when to show hint ============== -->
        <% if @is_admin_and_coach || (@is_admin && @user_params.coach == current_user.id) || (@is_admin && @user_params.id == current_user.id) %>
          <div class="notification" onclick="showHideElement('#teebox_<%=  c_stick.stick.id %>')"><img src="/images/tip_icon.png" alt=""/></div>
        <% elsif @is_admin %>
        <% else %>
          <% if (@c_s_stick.place_teebox.to_i < MAIN_STATISTIC_BAD_PROC) && (@c_s_stick.place_teebox != nil) && @c_hint_user.place_teebox_hint != nil %>
