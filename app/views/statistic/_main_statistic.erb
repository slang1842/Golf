<!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=- Place =-=-=-=-=-=-=-=-=-=-=-=-=-=- -->
<div class="clear"></div>
<div class="situation_type">
  <span onclick="showHideElement('#place')">
    <div class="name_wrap">
      <p>Place</p>
      <img src="/images/link_right_small.png" alt=""/>
    </div>
    <div class="info_wrap">
      <img src="/images/table_icon_location.png" alt=""/>
      <div class="description">
        <p>Place, where the hit took place</p>
      </div>
    </div>
  </span>
  <div class="single_situation" id="place" >

    <!-- ==== place_teebox ==== -->
    <div class="name">
      <p>Teebox</p>
    </div>
    <!-- ---------------------------- nujas ---------------------------- -->
    <% @user_sticks.each do |c_stick|%>
      <% @c_s_stick = @statistic.find_by_stick_id(c_stick.stick.id) %>
      <% @conditions_user = {:user_id => @user_params.coach, :stick_id => c_stick.stick.id} %>
      <% @conditions_admin = {:user_id => current_user.id, :stick_id => c_stick.stick.id} %>
      <% @c_hint_admin = Hint.find(:first, :conditions => @conditions_admin) || Hint.new(@conditions_admin) %>
      <% @c_hint_user = Hint.find(:first, :conditions => @conditions_user) || Hint.new(@conditions_user) %>

      <%= render(:partial => 'statistic/main_statistic_loop_form', :locals => {
          :main_title => "Teebox",
          :hint_id_prefix => "place_teebox_hint_",
          :current_situation_hint => @c_hint_user.place_teebox_hint.to_s,
          :current_situation => @c_s_stick.place_teebox.to_i,
          #===================================
          :user_sticks => @user_sticks,
          :c_s_stick => @c_s_stick,
          :c_stick => c_stick,
          :statistic => @statistic,
          :user_params => @user_params,
          :c_hint_admin => @c_hint_admin,
          :c_hint_user => @c_hint_user,
          :is_admin_and_coach => @is_admin_and_coach,
          :is_admin => @is_admin,
          :current_club_trainer => @current_club_trainer })
    %>
    <% end %>
    <!-- ---------------------------- nujas ---------------------------- -->
    <div class="clear"></div>
    <!-- ==== place_teebox ==== -->


  </div>
  <div class="clear"></div>
  <div class="bottom_line"></div>
</div>
