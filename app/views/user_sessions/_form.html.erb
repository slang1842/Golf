<%= form_for user_session, :url => {:action => "create", :controller => "user_sessions"} do |f| %>
  <%=  f.error_messages %>
  
			<div class="input_wrap">
			<p><%=  f.label :email %></p><%=  f.text_field :email %>
			</div>
			
			<div class="input_wrap">
				<p><%=  f.label :password %></p><%=  f.password_field :password %>
			</div>
			
			<div class="clear"></div>
			<div class="button">
				<%=  f.submit "Login" %>
			</div>
			
       <%#=  f.check_box :remember_me %>
       <%#=  f.label :remember_me %>
  
<% end %>