<p><span class="competition_heading" >Showing everyone's score on field "<%= field_stats.first.field.name%>"</span></p>
<div class="single_stats_wrap" style="margin-bottom:60px">
	<div class="table_wrap">
			<div class="line">
				<div class="row" style="width:25px">
          <p></p>
        </div>
        <div class="row" style="width:100px">
          <p></p>
        </div>
				 <div class="row" style="width:454px">
          <p>Holes</p>
        </div>
        <div class="row" style="width:90px">
          <p>Total strokes</p>
        </div>
				<div class="row" style="width:90px">
          <p>Rank</p>
        </div>          
			</div>
			<div class="clear"></div>
			<div class="line">
				<div class="row" style="width:25px">
          <p></p>
        </div>
        <div class="row" style="width:100px">
          <p>Name</p>
        </div>
				<% z = 1%>
				<% while z < 19 %>
        	<div class="row" style="width:20px;">
           	<p><%= z %></p>
						
         	</div>
					<% if z == 9%>
						<div class="row" style="width:25px;">
           		<p>Out</p>
         		</div>
					<% end %>
					<% if z == 18%>
						<div class="row" style="width:25px;">
           		<p>In</p>
         		</div>
						<div class="row" style="width:25px;">
           		<p>Tot</p>
         		</div>
					<% end %>
					<%z += 1%>
				<% end %>
        <div class="row" style="width:90px">
          <p></p>
        </div>
				<div class="row" style="width:90px">
          <p></p>
        </div>          
			</div>
				<% i = 1 %>
				<% field_stats.each do |stat|%>
				<% if stat.user == user then style = "background-color:yellow" end%>
        <div class="clear"></div>
					<div class="line" style="<%=style%>">
						<div class="row1" style="width:25px;<%=style%>">
          	  <p><%= i %>.</p> <% i += 1%>
         		</div>
						<div class="row1" style="width:100px;<%=style%>">
            	<p><%= stat.user.first_name%> <%= stat.user.last_name%></p>
          	</div>
						<% z = 1%>
						<% k = 0%>
						<% c = 0%>
						<% while z < 19 %>
          	<div class="row1" style="width:20px;<%=style%>">
							<% x = stat.send("best_score_hole_" + z.to_s) %>
							<% if x != nil then k += x else k += 0 end%>							
            	<p><%= x %></p>
													
          	</div>
							<% if z == 9%>
								<div class="row1" style="width:25px;<%=style%>">
            			<p><%= k %></p>
									<% c = k%>
          			</div>
							<% end %>
							<% if z == 18 %>
								<div class="row1" style="width:25px;<%=style%>">
            			<p><%= k - c %></p>
          			</div>
								<div class="row1" style="width:25px;<%=style%>">
            			<p><%= c %></p>
          			</div>
							<% end %>
							<% z += 1%>	
						<% end %>
						<div class="row1" style="width:90px;<%=style%>">
          		<p><%= stat.best_total_score%></p>
        		</div>
						<div class="row1" style="width:90px;<%=style%>">
          		<p><%= stat.rank %></p>
        		</div> 
				
        	</div>
				 
       <%end%>
</div>
