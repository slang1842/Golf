
<div class="single_stats_wrap" style="margin-bottom:60px">
	<div class="table_wrap">
			<div class="line">
        <div class="row" style="width:20px">
          <p></p>
        </div>
				 <div class="row" style="width:90px">
          <p>Best strokes</p>
        </div>
        <div class="row" style="width:90px">
          <p>Average strokes</p>
        </div>
				<div class="row" style="width:90px">
          <p>Worst strokes</p>
        </div>  
				<div class="row" style="width:90px">
          <p>Rank</p>
        </div>        
			</div>
				<% i = 0 %>
				<% stats_by_holes.each do |stat|%>
        <div class="clear"></div>
					<div class="line">
					<div class="row1" style="width:20px;">
            <p><%= stat.hole_number%>.</p>
          </div>
					<div class="row1" style="width:90px;">
            <p><%= stat.best_strokes%></p><% i += stat.best_strokes.to_i %>
          </div>
          <div class="row1" style="width:90px;">
            <p><%= stat.avg_strokes %></p>
          </div>
          <div class="row1" style="width:90px;">
            <p><%= stat.worst_strokes %></p>
          </div>
					<div class="row1" style="width:90px;">
            <p><%= stat.rank %></p>
          </div>
        </div>
       <%end%>
			<div class="line">
				<div class="row" style="width:90px">
          <p>Total strokes</p>
        </div> 
				<div class="row" style="width:90px">
          <p>Rank in field</p>
        </div> 
			</div>
			<div class="line">
				<div class="row1" style="width:90px">
          <p><%= i %></p>
        </div> 
				<div class="row" style="width:90px">
          <p><%= field_stats.rank %></p>
					<p><a href="/get_total_stats_by_field/<%=stats_by_sticks.first.single_field_statistic.user_id%>/<%=stats_by_sticks.first.field_id%>" data-remote="true">View in club context</a></p>
        </div> 
			</div>
	</div>

	<div class="table_wrap">
			<div class="line">
        
				 <div class="row" style="width:90px">
          <p>Club</p>
        </div>
        <div class="row" style="width:90px">
          <p>Average distance</p>
        </div>
        <div class="row" style="width:90px">
          <p>Total strokes</p>
        </div>  
			</div>
				<% stats_by_sticks.each do |stat|%>
        <div class="clear"></div>
					<div class="line">
					<div class="row1" style="width:90px;">
            <p><%= stat.users_stick.stick.stick_type%></p>
          </div>
					<div class="row1" style="width:90px;">
            <p><%= stat.avg_distance%></p>
          </div>
          <div class="row1" style="width:90px;">
            <p><%= stat.total_strokes%> </p>
          </div>
        </div>
       <%end%>
	</div>
</div>
