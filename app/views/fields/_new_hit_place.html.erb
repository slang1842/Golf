<% hit_place ||= HitPlace.new %>
<%= f.fields_for hit_place_attributes_name, hit_place do |hp| %>
<%= hp.hidden_field :id unless hit_place.new_record? %>
<div class="field">
  <%= hp.label :place %>
  <%= hp.text_field :place %>

  <%= hp.label :color %>
  <%= hp.text_field :color %>
</div>
<% end %>