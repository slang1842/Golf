<%= form_for :announcement, announcement, :url => announcement_update_path(announcement.id), :html => {:class => "ann_form", :multipart => true} do |a| %>
	<div class="add_article">
		
		<label>Heading:</label>
		<%= a.text_field :header, :class => "announcement_heading_field" %>
		<span class="counter heading_counter">60 zīmes palikušas</span>
		<div class="clear"></div>
		<label>Article:</label>
		<%= a.text_area :body, {:class => "announcement_body_field"}%>
		<span class="counter2 body_counter">60 zīmes palikušas</span>
		<div class="clear"></div>
		<label>Image:</label>
		<%= a.file_field :image, :class => "article_file_field" %>
		<div class="clear"></div>
		<a href="#" class="green_button" onclick="$('.ann_form').submit();">Save</a>
<% end %>
		
</div>
