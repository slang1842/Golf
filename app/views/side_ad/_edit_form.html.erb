
<%= form_for :side_ad, :as => side_ad, :url => "/side_ad/#{side_ad.id.to_s}/update", :method => 'put', :html => {:class => "ad_form", :remote => true} do |a| %>
	<div class="add_article">
		
		<label>Heading:</label>
		<%= a.text_field :header, :class => "announcement_heading_field", :maxlen => 20, :onkeyup => "maxlen('chars_left_header', 'announcement_heading_field');" %>
		<span class="counter heading_counter chars_left_header"></span>
		<div class="clear"></div>
		<label>Text:</label>
		<%= a.text_field :body, :class => "announcement_body_field", :maxlen => 60, :onkeyup => "maxlen('chars_left_body', 'announcement_body_field')"%>
		<span class="counter2 body_counter chars_left_body"></span>
		<label>Link:</label>
		<%= a.text_field :link, :class => "announcement_link_field", :maxlen => 100, :onkeyup => "check_link('chars_left_link', 'announcement_link_field')"%>
		<span class="counter3 body_counter chars_left_link"></span>
		<div class="clear"></div>
		<label>Show on first page?:</label>
		Yes <%= a.radio_button :to_be_shown, "true" %>
		No <%= a.radio_button :to_be_shown, "false" %>
		<div class="clear"></div>
		<a href="#" class="green_button" onclick="$('.ad_form').submit();">Save</a>
<% end %>
		
</div>
