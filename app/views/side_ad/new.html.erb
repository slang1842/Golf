<%= render :partial => 'share/header_menu', :locals => {:header_menu_active_class => "my_club"} %>


<%= render 'golf_club/links_menu'%>
<%= form_for :side_ad, @side_ad, :url => "/side_ad", :method => 'post', :html => {:class => "ad_form"} do |a| %>
	<div class="add_article">
		
		<label>Heading:</label>
		<%= a.text_field :header, :class => "announcement_heading_field", :maxlen => 20, :onkeyup => "maxlen('chars_left_header', 'announcement_heading_field');" %>
		<span class="counter heading_counter chars_left_header"></span>
		<div class="clear"></div>
		<label>Text:</label>
		<%= a.text_field :body, :class => "announcement_body_field", :maxlen => 60, :onkeyup => "maxlen('chars_left_body', 'announcement_body_field')"%>
		<span class="counter chars_left_body"></span>
		<div class="clear"></div>
		<label>Link:</label>
		<%= a.text_field :link, :class => "announcement_link_field", :maxlen => 100, :onkeyup => "check_link('chars_left_link', 'announcement_link_field')"%>
		<span class="counter chars_left_link"></span>
		<div class="clear"></div>
		<label style="width:200px">Show on first page?:</label>
		<div class="clear"></div>
		<label style="width:20px">Yes</label> 
		<%= a.radio_button :to_be_shown, "true", :class => "radio" %>
		<label style="width:20px">No</label>
		 <%= a.radio_button :to_be_shown, "false", :class => "radio" %>
		<div class="clear"></div>
		<a href="#" class="green_button" onclick="$('.ad_form').submit();">Save</a>
<% end %>
		
</div>
